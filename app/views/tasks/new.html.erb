<%= form_with(model: @task, local: true) do |form| %>
  <div class = "task_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="task_limit_on">
    <%= form.label :limit_on %>
    <%= form.text_field :limit_on %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to 'タスク一覧画面に戻る', tasks_path %>
