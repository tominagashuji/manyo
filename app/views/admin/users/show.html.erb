<h2><%= notice %></h2>
<h1>投稿タスク一覧</h1>

<p><%= @user.name %> さんのタスク一覧</p>
<table class="table table-striped table-responsive table-condensed table-hover">
  <tr>
    <th>名前</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先度</th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="danger">
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= task.limit_on %></td>
    <td><%= task.status_i18n %></td>
    <td><%= task.priority_i18n %></td>
  </tr>
<% end %>
</table>
