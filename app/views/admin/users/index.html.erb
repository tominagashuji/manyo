<h2><%= notice %></h2>
<h1>管理画面（ユーザー一覧）</h1>

<table class="table table-striped table-responsive table-condensed table-hover">
  <tr>
    <th>名前</th>
    <th>email</th>
    <th>管理者権限</th>
    <th>投稿件数</th>
  </tr>

  <% @users.each do |user| %>
    <tr class="danger">
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin %></td>
      <td><%= user.tasks.count %></td>

      <td><%= link_to t('index.show'), admin_user_path(user.id), class: 'btn btn-primary' %></td>
      <td><%= link_to t('index.edit'), edit_admin_user_path(user.id), data: {confirm: '編集確認'}, class: 'btn btn-warning' %></td>
      <td><%= link_to t('index.delete'), admin_user_path(user.id), method: :delete ,data: {confirm: "削除確認"}, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>
