<!DOCTYPE html>
<html>
  <head>
    <title>Manyo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="jumbotron jumbotron-extend">
      <div class="cotainer-fluid">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">Bootstrap</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">タスク管理システム</a>
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <% if current_user %>
                  <li><%= link_to t('header.index'),tasks_path %></li>
                  <!-- <li><%= link_to t('index.logout'),logout_path, method: :delete %></li> -->
                  <li><%= link_to t('header.logout'),logout_path %></li>
                  <li><%= link_to t('header.show'),user_path(current_user.id) %></li>
                  <% if current_user.admin? %>
                    <li><%= link_to t('header.admin.index'),admin_users_path %></li>
                  <% end %>
                <% else %>
                  <li><%= link_to t('header.new'),new_user_path %></li>
                  <li><%= link_to t('header.login'),login_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </header><br>
      <%= yield %>
      </div>
    </div>
    <footer>
      <p>201901 copy</p>
    </footer>
  </body>

</html>
